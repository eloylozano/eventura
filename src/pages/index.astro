---
import Layout from "../Layout/Layout.astro";
import CustomH2 from "../components/CustomH2.astro";
import Step from "../components/Step.astro";
import Testimonials from "../components/Testimonials.astro";
import Text from "../components/Text.astro";
import Button from "../components/Button.astro";
import "../style.css";
---

<Layout>
  <div
    id="hero"
    class="flex flex-col justify-center items-center gap-8 md:gap-12 min-h-[80vh] text-white text-center px-4"
  >
    <div class="flex flex-col items-center gap-4">
      <img
        src="/images/logo/white02.svg"
        alt="Eventura's Logo"
        class="h-20 md:h-24"
      />
      <h1 class="font-black text-5xl md:text-8xl">Eventura</h1>
    </div>
    <p class="font-regular text-lg md:text-xl max-w-xl">
      Organize, connect, and experience every event as an unforgettable
      experience.
    </p>
  </div>
  <section
    class="w-full flex flex-col items-center justify-center py-12 px-4 md:px-16"
  >
    <div
      class="flex md:flex-row justify-evenly w-full items-center gap-8 md:gap-12"
    >
      <Step
        title="Organize effortlessly"
        text="Create events in minutes. From private meetups to large concerts, everything is designed so you can focus on what matters: the experience."
        img="calendar"
      />
      <Step
        title="Connect with your audience"
        text="Easily share your event, manage guests, track RSVPs, and keep everyone updated with smart notifications."
        img="connect"
      />
      <Step
        title="Measure, learn, and grow"
        text="Get valuable insights after each event. Analyze attendance, engagement, and feedback to keep improving every time."
        img="stats"
      />
    </div>
  </section>
  <Testimonials />
  <section
    class="w-full mt-24 py-12 px-4 md:px-32 flex flex-col md:flex-row gap-8 items-center"
  >
    <div class="md:w-2/3 text-left flex flex-col justify-center items-start">
      <CustomH2 title="Much more compatible than ever" class="mb-8 md:mb-12" />
      <Text
        class="text-left w-2/3"
        text="Eventura adapts to you, wherever you are and whatever your event. Compatible with any device, platform, or audience type, our technology allows you to organize, attend, and enjoy without limits. Because true connection knows no boundaries."
      />
    </div>
    <img
      src="/images/world.png"
      class="w-100 max-w-md md:max-w-none md:h-full"
      alt="Globe"
    />
  </section>

  <section>
    <div
      class="bg-[#2e2e2e] py-16 px-6 md:px-32 flex flex-col gap-8 text-center"
    >
      <CustomH2 title="Join this amazing world" class="text-white" />
      <Text
        class="text-white max-w-3xl mx-auto mb-8"
        text="Be part of a new way of experiencing events. With Eventura, you don't just organize or attend: you connect, share, and create moments that leave a lasting impression. Join today and discover how your next event can be extraordinary."
      />
      <div class="mx-auto">
        <Button text="Start new adventure" size="lg" />
      </div>
    </div>
  </section>
</Layout>

<style>
  #hero {
    background-image: url("/images/wallpapers/01.png");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }
</style>
